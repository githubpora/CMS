<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.dell.afinal.View.CircleImageView
        android:id="@+id/cms_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_head"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cms_team"
        android:layout_alignTop="@id/cms_team"
        android:layout_marginTop="5dp"
        android:text="CMS团队"/>

    <TextView
        android:id="@+id/notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_toEndOf="@id/cms_team"
        android:text="YYYY-MM-DD HH:MM:SS"/>

    <TextView
        android:id="@+id/read_tag"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cms_team"
        android:layout_marginEnd="10dp"
        android:text="已读"
        android:textColor="@color/white"
        android:gravity="center" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cms_team"
        android:layout_margin="10dp"
        android:text="这里是通知的标题"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_title"
        android:layout_alignStart="@+id/notification_title"
        android:text="这里是通知的正文" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_grya"
        android:layout_below="@id/notification_content"/>

</RelativeLayout>